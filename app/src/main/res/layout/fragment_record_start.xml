<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="33dp"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        style="@style/RecordTitleText"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="1월 1일"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        style="@style/RecordTitleText"
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="의 "
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@id/tv_title"/>

    <TextView
        style="@style/RecordTitleText"
        android:id="@+id/tv_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="웨디"
        android:textColor="@color/mint_icon"
        app:layout_constraintTop_toTopOf="@id/tv_title2"
        app:layout_constraintStart_toEndOf="@id/tv_title2"/>

    <TextView
        style="@style/RecordTitleText"
        android:id="@+id/tv_title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="를"
        app:layout_constraintTop_toTopOf="@id/tv_title3"
        app:layout_constraintStart_toEndOf="@id/tv_title3"/>

    <TextView
        style="@style/RecordTitleText"
        android:id="@+id/tv_title5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록해 볼까요?"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"/>

    <ImageView
        android:id="@+id/step1"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/main_mint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/step2"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/sub_grey_7"
        app:layout_constraintTop_toTopOf="@id/step1"
        app:layout_constraintBottom_toBottomOf="@id/step1"
        app:layout_constraintStart_toEndOf="@id/step1"/>

    <ImageView
        android:id="@+id/step3"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/sub_grey_7"
        app:layout_constraintTop_toTopOf="@id/step2"
        app:layout_constraintBottom_toBottomOf="@id/step2"
        app:layout_constraintStart_toEndOf="@id/step2"/>

    <TextView
        style="@style/RecordSubText"
        android:id="@+id/tv_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="기록할 위치와 날씨를 확인해 주세요."
        app:layout_constraintTop_toBottomOf="@id/tv_title5"
        app:layout_constraintStart_toStartOf="@id/tv_title5"/>

    <team.weathy.view.WeathyCardView
        android:id="@+id/cv_record"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_marginTop="63dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sub"
        app:weathy_disable_shadow="true"
        app:weathy_stroke_width="1dp"
        app:weathy_stroke_color="#E6E6E6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="25dp">

            <ImageView
                android:layout_width="84dp"
                android:layout_height="60dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="서울 서초구"
                android:textColor="@color/main_grey"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@id/tv_date"
                app:layout_constraintTop_toBottomOf="@id/tv_date" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="1월 1일 일요일"
                android:textColor="@color/sub_grey_1"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/high_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="87dp"
                android:layout_marginEnd="102dp"
                android:fontFamily="@font/roboto_light"
                android:text="-4°"
                android:textColor="@color/red_temp"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/roboto_light"
                android:text="/"
                android:textColor="#6B6B6B"
                android:textSize="27sp"
                app:layout_constraintBottom_toBottomOf="@id/high_temp"
                app:layout_constraintLeft_toRightOf="@id/high_temp"
                app:layout_constraintTop_toTopOf="@id/high_temp" />

            <TextView
                android:id="@+id/low_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/roboto_light"
                android:text="-4°"
                android:textColor="@color/blue_temp"
                android:textSize="50sp"
                app:layout_constraintStart_toEndOf="@id/temp"
                app:layout_constraintTop_toTopOf="@id/high_temp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </team.weathy.view.WeathyCardView>

    <Button
        style="@style/RoundButton.Change"
        android:id="@+id/btn_change"
        android:layout_width="79dp"
        android:layout_marginTop="16dp"
        android:text="변경하기"
        app:layout_constraintTop_toBottomOf="@id/cv_record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        style="@style/RoundButton.Mint"
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_marginBottom="38dp"
        android:text="다음"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>