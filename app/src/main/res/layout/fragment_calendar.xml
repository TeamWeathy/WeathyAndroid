<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainVm"
            type="team.weathy.ui.main.MainViewModel" />
        <variable
            name="vm"
            type="team.weathy.ui.main.calendar.CalendarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <team.weathy.view.calendar.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_marginTop="224dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:onClick="@{() -> vm.onClickContainer()}"
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layoutAnimation="@null"
                android:paddingHorizontal="46dp"
                android:paddingTop="37dp"
                android:clipToPadding="false"
                android:paddingBottom="120dp">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="12월 21일 월요일"
                    android:textColor="@color/sub_grey_1"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/more"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/more"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ripple_48"
                    android:onClick="@{() -> vm.onClickMoreMenu()}"
                    android:scaleType="fitCenter"
                    android:src="@drawable/calendar_frame_more"
                    app:layout_constraintBottom_toBottomOf="@id/date"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/date" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/morePopup"
                    visibilityWithAnim="@{vm.isMoreMenuShowing}"
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="12dp"
                    android:visibility="gone"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="12dp"
                    app:layout_constraintRight_toRightOf="@id/more"
                    app:layout_constraintTop_toBottomOf="@id/more"
                    tools:alpha="0.5"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingHorizontal="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="12dp"
                                android:layout_weight="3"
                                android:text="수정하기"
                                android:textColor="@color/sub_grey_1"
                                android:textSize="16dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/edit_image"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/edit_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:src="@drawable/ic_edit"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/sub_grey_7" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/ripple"
                            android:clickable="true"
                            android:focusable="true"
                            android:paddingHorizontal="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="12dp"
                                android:layout_weight="3"
                                android:text="삭제하기"
                                android:textColor="@color/pink"
                                android:textSize="16dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/delete_image"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/delete_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:src="@drawable/ic_delete"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/gpsImage"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="9.5dp"
                    android:src="@drawable/ic_sample"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/date" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="서울 서초동"
                    android:textColor="@color/main_grey"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/gpsImage"
                    app:layout_constraintLeft_toRightOf="@id/gpsImage"
                    app:layout_constraintTop_toTopOf="@id/gpsImage" />

                <TextView
                    android:id="@+id/temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="-4°"
                    android:textColor="@color/red_temp"
                    android:textSize="35sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/location" />

                <TextView
                    android:id="@+id/temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="/"
                    android:textColor="@color/temp_bar"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="@id/temp1"
                    app:layout_constraintLeft_toRightOf="@id/temp1"
                    app:layout_constraintTop_toTopOf="@id/temp1" />

                <TextView
                    android:id="@+id/temp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="-4°"
                    android:textColor="@color/blue_temp"
                    android:textSize="35sp"
                    app:layout_constraintBottom_toBottomOf="@id/temp2"
                    app:layout_constraintLeft_toRightOf="@id/temp2"
                    app:layout_constraintTop_toTopOf="@id/temp2" />

                <ImageView
                    android:id="@+id/emoji"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/logo512"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/temp3" />

                <TextView
                    android:id="@+id/emojiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/notosans_bold"
                    android:text="매우 추웠어요"
                    android:textColor="@color/imoji_verycold_text"
                    android:textSize="25sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/emoji" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/sub_grey_7"
                    app:layout_constraintTop_toBottomOf="@id/emojiText" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:barrierMargin="20dp"
                    app:constraint_referenced_ids="label1" />

                <TextView
                    android:id="@+id/label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="상의"
                    android:textColor="@color/sub_grey_6"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="기모맨투맨, 히트텍"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/label1"
                    app:layout_constraintLeft_toRightOf="@id/barrier"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/label1" />

                <TextView
                    android:id="@+id/label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="하의"
                    android:textColor="@color/sub_grey_6"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/label1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="청바지"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/label2"
                    app:layout_constraintLeft_toRightOf="@id/barrier"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/label2" />

                <TextView
                    android:id="@+id/label3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="외투"
                    android:textColor="@color/sub_grey_6"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/label2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="롱패딩"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/label3"
                    app:layout_constraintLeft_toRightOf="@id/barrier"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/label3" />

                <TextView
                    android:id="@+id/label4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="기타"
                    android:textColor="@color/sub_grey_6"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/label3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="목도리 장갑"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/label4"
                    app:layout_constraintLeft_toRightOf="@id/barrier"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/label4" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/sub_grey_7"
                    app:layout_constraintTop_toBottomOf="@id/label4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:lineSpacingExtra="3sp"
                    android:text="기모랑 히트텍 입고 하나 더 입었어야 했다...\n진짜 바람이 살을 파고드는 것처럼 추운 날이었어"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/divider2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <LinearLayout
            android:visibility="@{mainVm.loadingCalendar}"
            tools:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="104dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo512" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="웨디를 기록해주세요"
                android:textColor="@color/sub_grey_8"
                android:textSize="16sp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>