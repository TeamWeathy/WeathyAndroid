<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/transparent"
    tools:layout_height="102dp"
    tools:layout_width="80dp">

    <View
        android:id="@+id/circle_small"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:alpha="0"
        android:background="@drawable/circle"
        android:backgroundTint="@color/main_mint"
        app:layout_constraintBottom_toBottomOf="@id/day"
        app:layout_constraintLeft_toLeftOf="@id/day"
        app:layout_constraintRight_toRightOf="@id/day"
        app:layout_constraintTop_toTopOf="@id/day"
        tools:alpha="0.5" />

    <TextView
        android:alpha="0"
        android:layout_marginTop="5dp"
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="21"
        android:textColor="@color/main_grey"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/day_first_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:alpha="1"
        android:fontFamily="@font/roboto_medium"
        android:text="21"
        android:textColor="@color/main_grey"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/temp_high"
        android:layout_width="37dp"
        android:layout_height="25dp"
        android:layout_marginBottom="2dp"
        android:alpha="0"
        android:background="@drawable/ic_calendar_high"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:paddingVertical="2dp"
        android:text="-4°"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/temp_low"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.7"
        tools:alpha="0.7" />

    <TextView
        android:id="@+id/temp_low"
        android:layout_width="37dp"
        android:layout_height="25dp"
        android:layout_marginBottom="6dp"
        android:alpha="0"
        android:background="@drawable/ic_calendar_low"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:paddingVertical="2dp"
        android:text="-4°"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:alpha="0.7" />

    <View
        android:id="@+id/circle"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/imoji_verycold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/day" />


</androidx.constraintlayout.widget.ConstraintLayout>