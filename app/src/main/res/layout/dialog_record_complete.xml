<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="29dp"
    android:background="@drawable/dialog_record_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="47dp"
        android:text="기록이 완료되었어요!"
        android:textSize="20sp"
        android:textColor="@color/mint_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="웨디가 잘 기억하고 있을게요!"
        android:textSize="16sp"
        android:textColor="@color/sub_grey_6"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="@id/tv_title"/>

    <Button
        style="@style/RoundButton.Mint"
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="26dp"
        android:text="완료하기"
        app:layout_constraintTop_toBottomOf="@id/tv_sub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>