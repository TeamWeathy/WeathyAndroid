<resources>
    <!-- Base application theme. -->
    <style name="Theme.Weathy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/main_mint</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textColor">@color/main_grey</item>

        <item name="android:windowBackground">@drawable/background_window</item>

        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
        <item name="android:screenOrientation">portrait</item>

        <item name="colorPrimary">@color/main_mint</item>
    </style>


    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RoundButton.Mint">
        <item name="backgroundTint">@color/bg_round_button_mint</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButton.Red">
        <item name="backgroundTint">@color/bg_round_button_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButton.Cancel">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/btn_cancel_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/btn_cancel_gray</item>
        <item name="rippleColor">@color/btn_cancel_gray</item>
    </style>

    <style name="RoundButton.Grey">
        <item name="backgroundTint">@color/sub_grey_3</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButton.Change">
        <item name="cornerRadius">18dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="backgroundTint">@color/sub_grey_5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RecordTitleText">
        <item name="android:textSize">25sp</item>
        <item name="android:letterSpacing">-0.08</item>
        <item name="android:textColor">@color/main_grey</item>
    </style>

    <style name="RecordSubText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.08</item>
        <item name="android:textColor">@color/sub_grey_6</item>
    </style>

    <style name="ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ImageButton.size32_icon20">
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="ImageButton.size48_icon20">
        <item name="android:padding">14dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="chipCornerRadius">19.5dp</item>
        <item name="rippleColor">@color/chip_background_color</item>
        <item name="chipMinHeight">38dp</item>
        <item name="textStartPadding">11dp</item>
        <item name="textEndPadding">9dp</item>
    </style>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/main_mint</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/sub_grey_8</item>
    </style>
</resources>