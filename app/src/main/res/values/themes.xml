<resources>
    <!-- Base application theme. -->
    <style name="Theme.Weathy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="android:fontFamily">@font/notosans_regular</item>

        <item name="android:includeFontPadding">false</item>

        <item name="android:letterSpacing">-0.05</item>
    </style>


    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RoundButton.Mint">
        <item name="backgroundTint">@color/main_mint</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButton.Red">
        <item name="backgroundTint">@color/text_high_temp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButton.Cancel">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/btn_cancel_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/btn_cancel_gray</item>
        <item name="rippleColor">@color/btn_cancel_gray</item>
    </style>

</resources>