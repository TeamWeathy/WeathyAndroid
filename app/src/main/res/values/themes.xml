<resources>
    <!-- Base application theme. -->
    <style name="Theme.Weathy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/main_mint</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">-0.08</item>
        <item name="android:textColor">@color/main_grey</item>

        <item name="android:windowBackground">@drawable/background_window</item>

        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>

        <item name="android:supportsRtl">false</item>

        <item name="colorPrimary">@color/main_mint</item>
    </style>

    <style name="Theme.Weathy.EditText">
        <item name="colorPrimary">#b3c4c4c4</item>
    </style>

    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RoundButton.Mint">
        <item name="backgroundTint">@color/bg_round_button_mint</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButton.Red">
        <item name="backgroundTint">@color/bg_round_button_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButton.Cancel">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/btn_cancel_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/btn_cancel_gray</item>
        <item name="rippleColor">@color/btn_cancel_gray</item>
    </style>

    <style name="RoundButton.Cancel.Subgray2">
        <item name="android:textColor">@color/sub_grey_6</item>
        <item name="strokeColor">@color/sub_grey_2</item>
        <item name="rippleColor">@color/sub_grey_2</item>
    </style>

    <style name="RoundButton.Grey">
        <item name="backgroundTint">@color/sub_grey_3</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButton.Change">
        <item name="cornerRadius">18dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="backgroundTint">@color/sub_grey_5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RecordTitleText">
        <item name="android:textSize">25sp</item>
        <item name="android:letterSpacing">-0.08</item>
        <item name="android:textColor">@color/main_grey</item>
    </style>

    <style name="RecordSubText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.08</item>
        <item name="android:textColor">@color/sub_grey_6</item>
    </style>

    <style name="ImageButton">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ImageButton.size32">
        <item name="android:background">@drawable/ripple_32</item>
    </style>

    <style name="ImageButton.size48">
        <item name="android:background">@drawable/ripple_48</item>
    </style>

    <style name="ImageButton.size32.icon20">
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="ImageButton.size32.icon25">
        <item name="android:padding">3dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="ImageButton.size48.icon20">
        <item name="android:padding">14dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ImageButton.size48.padding19">
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingStart">19dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_select_bg</item>
        <item name="android:textColor">@color/chip_select_text</item>
        <item name="chipStrokeColor">@color/chip_select_stroke</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="chipCornerRadius">19.5dp</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="chipMinHeight">39dp</item>
        <item name="textStartPadding">11dp</item>
        <item name="textEndPadding">9dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomChipStyle.Delete">
        <item name="chipBackgroundColor">@color/chip_delete_bg</item>
        <item name="android:textColor">@color/chip_delete_text</item>
        <item name="chipStrokeColor">@color/chip_delete_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/transparent</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/main_mint</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/sub_grey_8</item>
    </style>

    <style name="Indicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorSize">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="Indicator.White">
        <item name="indicatorColor">@color/white</item>
    </style>

    <style name="Indicator.Primary">
        <item name="indicatorColor">@color/main_mint</item>
    </style>

    <style name="DatePicker">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/main_mint</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/main_mint</item>
        <item name="controlBackground">@drawable/ic_search</item>
    </style>

    <style name="RoundBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_round_20</item>
    </style>

    <style name="RoundBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundBottomSheet</item>
    </style>

    <style name="ImageView">
        <item name="android:background">@color/image_view_background</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="WeekendText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/sub_grey_6</item>
    </style>

    <style name="MinTempText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_temp</item>
    </style>

    <style name="MaxTempText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/red_temp</item>
    </style>
</resources>