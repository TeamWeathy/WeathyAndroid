<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <objectAnimator
            android:propertyName="alpha"
            android:valueFrom="0"
            android:valueTo="1" />
    </item>
    <item android:state_activated="false">
        <objectAnimator
            android:propertyName="alpha"
            android:valueFrom="1"
            android:valueTo="0" />
    </item>
</selector>